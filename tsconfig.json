{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "CommonJS",
    "allowJs": true,
    "outDir": "./dist-server",
    "rootDir": "./src",
    "typeRoots": ["../node_modules/@types"],
    "types": ["node"],
    "noEmitOnError": true,
    // "strict": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "src/*.ts"] /* Include every ts file in source folder */,
  "exclude": ["node_modules"],
  // "compileOnSave": true,
  // "buildOnSave": true,
  "lib": ["es2016", "es2015", "dom", "es5"]
}
